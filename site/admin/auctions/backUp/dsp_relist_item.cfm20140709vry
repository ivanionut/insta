<script type="text/javascript">
$(function(){
	$('##btnBuyItNow').click(function(){
		$('##BuyItNowPrice').val("0.0");
	});
	$('##selStartPrice').change(function(){
		 var dval = $(this).val();
		$('##StartPrice').val(dval);
	});
});
</script>
